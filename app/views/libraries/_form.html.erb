<%= form_with(model: library, class: "needs-validation") do |form| %>
  <% if library.errors.any? %>
    <div class="alert alert-danger">
      <h2><%= pluralize(library.errors.count, "error") %> prohibited this library from being saved:</h2>

      <ul>
        <% library.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-cols-2 mt-5">
    <div class="mb-3 mx-auto">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :address, class: "form-label" %>
      <%= form.text_field :address, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :year_of_creation, class: "form-label" %>
      <%= form.text_field :year_of_creation, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>