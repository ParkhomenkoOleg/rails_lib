      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-cols-2 mt-5">
    <div class="mb-3 mx-auto">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true%>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_field :description, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :publication_year, class: "form-label" %>
      <%= form.text_field :publication_year, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :library_id, class: "form-label" %>
      <%= form.text_field :library_id, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :genres_id, class: "form-label" %>
      <%= form.text_field :genres_id, class: "form-control", required: true %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.label :image, class: "form-label"%>
      <%= form.file_field :image, class: "form-control" %>
    </div>

    <div class="mb-3 mx-auto">
      <%= form.submit "Save", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
