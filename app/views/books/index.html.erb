<p style="color: green"><%= notice %></p>

<div id="books">
  <% @books.each do |book| %>
    <div class="row-cols-2">
      <div class="card mb-3 mx-auto">
        <div class="card-body">
          <%= render book %>
          <%= link_to "Show this book", book, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>


<%= link_to "New book", new_book_path, class: "btn btn-primary link-offset-2 link-underline link-underline-opacity-0" %>