<header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container-fluid">
      <% if user_signed_in? %>
        <%= link_to 'Library', libraries_path, class:'navbar-brand link-offset-2 link-underline link-underline-opacity-0'%>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">

            <ul class="navbar-nav me-auto">
              <%= link_to 'Books', books_path, class:'nav-item nav-link link-offset-2 link-underline link-underline-opacity-0'%>
              <%= link_to 'Genre', genres_path, class:'nav-item nav-link link-offset-2 link-underline link-underline-opacity-0'%>
              <%= link_to 'Author', authors_path, class:'nav-item nav-link link-offset-2 link-underline link-underline-opacity-0'%>
            </ul>
            <form action="/libraries" method="post" class="d-flex">
              <input type="text" placeholder="Search..." name="search" class="form-control me-sm-2"/>
              <button type="submit" class="btn btn-secondary my-2 my-sm-0">Search</button>
            </form>
            <%= link_to "Sign Out", destroy_user_session_path, data: { "turbo-method": :delete }, class: 'btn btn-dark mx-2 link-offset-2 link-underline link-underline-opacity-0' %>
        <% else %>
            <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-dark mx-auto'%>
            <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-dark mx-auto'%>
        <% end %>
        </div>
    </div>
  </nav>
</header>